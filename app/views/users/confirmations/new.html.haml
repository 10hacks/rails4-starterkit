.auth__form
  %h2= I18n.t 'auth.confirm.link'

  = simple_form_for resource, as: resource_name, url: confirmation_path(resource_name) do |f|
    = devise_error_messages!
    = f.input :email, autofocus: true, required: true
    = f.button :submit, I18n.t('auth.confirm.submit'), class: 'btn-primary'

  = render "users/shared/links"
