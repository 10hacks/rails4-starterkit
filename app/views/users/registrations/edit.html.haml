
.auth__form
  %ul.nav.nav-tabs
    %li.active
      = link_to I18n.t('account.edit.link'), edit_user_registration_path
    %li
      = link_to I18n.t('accounts.edit.link'), user_authentications_path(current_user)


  - if devise_mapping.confirmable? and not resource.confirmed?
    .alert.alert-warning.alert-dismissable
      %button.close{'data-dismiss' => 'alert', 'aria-hidden' => true} &times;
      %p= I18n.t 'devise.registrations.signed_up_but_unconfirmed'
      %p= button_to I18n.t('auth.confirm.submit'), confirmation_path(resource_name), class: 'btn btn-warning btn-xs'

  = render 'users/registrations/form', show_all: true

  = render 'users/shared/links', disable_signup: true

